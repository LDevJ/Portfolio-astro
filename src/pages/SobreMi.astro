          <p class="text-xs text-white xl:text-sm mt-2 font-bold">TAILWIND</p>
        </div>
  
      </div>
    </div>
  
    <!--LINEAS DE TIEMPO-->
    <div class="mx-5 flex flex-col mt-10 xl:w-[1000px] xl:ml-56 xl:flex-row">
  
      <!-- EDUCACION LINEA -->
