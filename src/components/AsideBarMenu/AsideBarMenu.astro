          class="flex items-center p-2 text-gray-900 border-b-2 border-r-2 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
        >
          <svg
            viewBox="0 0 24 24"
            fill="currentColor"
            class="icon icon-tabler icons-tabler-filled icon-tabler-article flex-shrink-0 w-5 h-5 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
