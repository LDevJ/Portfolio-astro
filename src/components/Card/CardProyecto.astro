---
interface Props{
    titulo: string,
    img:{
        src: string,
        alt: string
    }
    descripcion: string,
    lenguajes: string[],
    linkPreview: {
        href: string,
        titulo: string
    }
    linkGitHub: {
        href: string,
        titulo: string
    }
}

const {titulo, img, descripcion, lenguajes, linkPreview, linkGitHub } = Astro.props;
const {src, alt} = img;

---

<div class="flex flex-col items-center bg-white border border-gray-90 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src={src} alt={alt}/>

    <div class="flex flex-col justify-between p-4 leading-normal">
        <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{titulo}</h3>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{descripcion}</p>
        
        <div class="flex flex-row gap-3 flex-wrap">
            {lenguajes.map((lenguaje:string)=>
                <div class="bg-[#D9D9D9] rounded-sm px-2" >{lenguaje}</div>
            )}
        </div>
    
        <div class="mt-3 flex justify-between">
            <div class="flex flex-row items-center gap-1">
                <img class="size-3" src="/icons/link.svg" alt="Icono de Cadena">
                <a href={linkPreview.href}>{linkPreview.titulo}</a>
            </div>

            <div class="flex flex-row items-center gap-1">
                <img class="size-3" src="/icons/github.svg" alt="Icono de GitHub">
                <a href={linkGitHub.href}>{linkGitHub.titulo}</a>
            </div>

        </div>

    </div>
    

</div>