---

interface Props {
  indice: number;
  titulo: string,
  img: {
    src: string,
    alt: string
  }
  description: string
}

const {indice, titulo, img, description} = Astro.props;

---



  <div id="accordion-collapse" data-accordion="collapse"
    <h2 id=`accordion-collapse-heading-${indice}`>
      <button type="button" class="flex flex-row items-center justify-between w-full p-5 font-medium rtl:text-right text-black border border-[#000F0A] border-t-0 border-l-0 border-b-4 border-r-4 dark:focus:ring-black dark:border-gray-700 dark:text-gray-400 dark:hover:bg-transparent gap-3" data-accordion-target=`#accordion-collapse-body-${indice}` aria-expanded="true" aria-controls=`accordion-collapse-body-${indice}`>
        <div class="flex justify-between">
          <span>{titulo}</span>
          <p class="mb-2 flex-1 text-black dark:text-gray-400">{description}</p>
        </div>
          <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
          </svg>
          
      </button>
    </h2>
    <div id=`accordion-collapse-body-${indice}` class="hidden" aria-labelledby=`accordion-collapse-heading-${indice}`>
      <div class="flex justify-center items-center gap-7 p-5 border border-[#000F0A] border-t-0 border-l-0 border-r-4 border-b-4 border-[#000F0A] dark:border-gray-700 dark:bg-gray-900">
        <img class="flex-1 w-full h-[200px]" src={img.src} alt={img.alt}/>

      </div>
    </div>
  </div>
